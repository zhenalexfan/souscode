{
  "kotlin.languageServer.enabled": true,
  "kotlin.compiler.jvm.target": "17",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.gradle": true,
    "**/build": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.vite": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.gradle": true,
    "**/build": true
  },
  "files.watcherExclude": {
    "**/.gradle/**": true,
    "**/build/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.vite/**": true
  },
  "kotlin.languageServer.transport": "stdio",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "/opt/homebrew/Cellar/openjdk@17/17.0.10/libexec/openjdk.jdk/Contents/Home",
      "default": true
    }
  ],
  "editor.tabSize": 2,
  "[kotlin]": {
    "editor.defaultFormatter": "shape-app.ktfmtter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "ktfmt.style": "google",
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}